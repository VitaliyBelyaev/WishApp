<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WishApp" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="WishAppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_bg_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.WishApp</item>
    </style>

    <style name="LicensesTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/status_bar_color_for_licenses</item>
        <item name="android:windowLightStatusBar">@bool/is_day_theme</item>
        <item name="toolbarStyle">@style/LicensesToolbarStyle</item>
    </style>

    <style name="LicensesToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/status_bar_color_for_licenses</item>
    </style>
</resources>